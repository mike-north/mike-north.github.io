<div class="title">
  {{talk.name}}
  {{#if isUpcoming}}
    <i class="material-icons">schedule</i>
  {{/if}}
</div>
<div class="venue-info">
  <a href={{talk.eventURL}} class="venue-link" target="_blank">
    {{talk.eventName}}
  </a>
  <span class="event-date">
    {{moment-format mDate 'MMM DD, YYYY'}}
  </span>
</div>
<ul class="tags">
  {{#each talk.tags as |tag|}}
    <li class="tag">
      {{tag}}
    </li>
  {{/each}}
</ul>
<p class="description">
  {{talk.description}}
</p>
{{yield}}
